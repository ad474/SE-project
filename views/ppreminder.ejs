<html>
    <head>
        <link href="https://fonts.googleapis.com/css?family=Shadows+Into+Light&display=swap" rel="stylesheet">
        <style>
            .wholediv2{
                background-color:#fa697c;
                background-image: -webkit-linear-gradient(20deg, #fa697c 65%, #d62196 35%);
                min-height: 100vh;
                font-family: 'helvetica neue';
                height: 100vh;
                margin: 0 0;
                padding-top: 20px;
              }
              .bg2{
                background: #ffe3ed;
                width: 30%;
                height: 30%;
                margin-left: auto;
                margin-right:auto;
                margin-top: 3%;
                padding: 10px;
                -webkit-box-shadow: 14px 10px 25px 10px rgba(95,103,105,0.84);
                -moz-box-shadow: 14px 10px 25px 10px rgba(95,103,105,0.84);
                box-shadow: 14px 10px 25px 10px rgba(95,103,105,0.84);
                -webkit-animation: fadein 2s; /* Safari, Chrome and Opera > 12.1 */
                 -moz-animation: fadein 2s; /* Firefox < 16 */
                  /* -ms-animation: fadein 2s; /* Internet Explorer */
                   -o-animation: fadein 2s; /* Opera < 12.1 */
                      animation: fadein 2s;
              }
              .bg3{
                background: #fa697c;
                width: 100%;
                height: 30%;
                left: 10;
                top: 10;
                margin-left: 0;
                margin-right:0;
                margin-top:0;
                padding: 10px;
                -webkit-box-shadow: 14px 10px 25px 10px rgba(95,103,105,0.84);
                -moz-box-shadow: 14px 10px 25px 10px rgba(95,103,105,0.84);
                box-shadow: 14px 10px 25px 10px rgba(95,103,105,0.84);
                -webkit-animation: fadein 2s; /* Safari, Chrome and Opera > 12.1 */
                 -moz-animation: fadein 2s; /* Firefox < 16 */
                  /* -ms-animation: fadein 2s; /* Internet Explorer */
                   -o-animation: fadein 2s; /* Opera < 12.1 */
                      animation: fadein 2s;
              }
body{
margin:0;
} 
.button1{
  /* background: #396362; */
  background:#f2eee5;
  width: 180px;
  padding: 4px 0;  
  position: absolute;
  left: 50%;
  top: 55%;
  transform: translateX(-50%) translateY(-50%);
  border-radius: 3px;
  /* color: #f2eee5; */
  color: black;
  font-family: 'Shadows Into Light', cursive;
  font-weight: bold;
  font-size: 20px;
}
&:hover {
    cursor: pointer;
  }
  
  &:after {
    content: "";
    display: block;
    color:#f2eee5
    position: absolute;
    width: 100%;
    height: 10%;
    border-radius: 50%;
    background-color: darken(#f1c40f, 20%);
    opacity: 0.4;
    bottom: -30px;
  }        
    </style>
    </head>
    <body>
      <div class="wholediv2"> 
        <div class="bg2">
      <form action="/<%=id%>/reminders/personal-reminders/add" method="post">
        <button type="submit" name="date" value="<%=date%>" class="button1">Add reminder</button>
        </form>
        <%if(flag){%>
            <h3 style="font-family: 'Shadows Into Light', cursive;">You have no reminders</h3>
          <%}%>
          <%if(flag2){%>
            <%entries.forEach(function(entry){%>
              <div class="">
                <h3><%=entry.time%></h3>
                <h3><%=entry.title%></h3>
                <h3><%=entry.contents%></h3>
              </div>
              <br>
              <br>
            <%});%>
          <%}%>
      </div>
      </div>
    </body>
</html>